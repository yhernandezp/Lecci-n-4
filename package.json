{
  "name": "bot_login_ldap",
  "version": "1.0.0",
  "description": "Microservicio para integracion con el ldap y validar usuarios",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --collectCoverage --update-snapshot --detectOpenHandles",
    "start:app": "npm run build:dev",
    "build:dev": "rm -r -f dist && tsc --build && npm run cpKeysSecure:dev",
    "cpKeysSecure:dev": "copyfiles \"./config/**\" ./dist/ && npm run cpEnv:dev",
    "cpEnv:dev": "copyfiles \"./config/.env\" \"./dist/\" && npm run cpPackage:dev",
    "cpPackage:dev": "copyfiles \"package.json\" \"./dist/\" && npm run start:dev",
    "start:dev": "node ./dist/index.js",
    "start": "node ./index.js"
  },
  "keywords": [
    "ldap",
    "login",
    "authorization"
  ],
  "author": "IAChat - Chatbot Tecnico - Everis Colombia",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^13.5.0",
    "@types/passport": "^1.0.2",
    "activedirectory2": "^1.3.0",
    "body-parser": "^1.19.0",
    "child_process": "^1.0.2",
    "copyfiles": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "jest-shell-matchers": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "ldapauth-fork": "^4.3.0",
    "log4js": "^6.1.1",
    "mysql": "^2.18.1",
    "node-cron": "^2.0.3",
    "node-gyp": "^6.1.0",
    "passport": "^0.4.1",
    "passport-ldapauth": "^2.1.3",
    "passport-strategy": "^1.0.0",
    "path": "^0.12.7",
    "ts-node": "^8.6.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/activedirectory2": "^1.2.1",
    "@types/cors": "^2.8.6",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
